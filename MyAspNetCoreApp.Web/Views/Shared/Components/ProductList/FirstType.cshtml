@model ProductListComponentViewModel

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>İsim</th>
            <th>Açıklama</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
            </tr>
        }
    </tbody>
</table>

<a class="btn btn-outline-primary" asp-controller="Products" asp-action="Index">
    Ürünlere Git
</a>