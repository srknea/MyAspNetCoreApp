@{
    ViewData["Title"] = "Add";
}

<h1>Ürün Ekleme</h1>

@model Product

<form asp-controller="Products" asp-action="SaveProduct" method="post" >

    <div class="mb-3">
        <label class="form-label">Ürün ismi :</label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="mb-3">
        <label class="form-label">Ürün fiyatı :</label>
        <input class="form-control" asp-for="Price" />
    </div>

    <div class="mb-3">
        <label class="form-label">Ürün stoku :</label>
        <input class="form-control" asp-for="Stock" />
    </div>

    <div class="mb-3">
        <label class="form-label">Ürün rengi</label>
        <input class="form-control" asp-for="Color" />
    </div>

    <div class="form-check">
        <input class="form-check-input" asp-for="IsPublish">
        <label class="form-check-label">
            Yayınlansın mı ?
        </label>
    </div>

    @foreach (var item in ViewBag.DictionaryExpire as Dictionary<string, int>)
    {
        <div class="form-check">
            <input class="form-check-input" type="radio" asp-for="Expire" value=@item.Value>
            <label class="form-check-label">
                @item.Key
            </label>
        </div>
    }     

    <br/>

    <button class="btn btn-primary" type="submit">Kaydet</button>

</form>