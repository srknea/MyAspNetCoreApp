@{
    ViewData["Title"] = "Add";
}

<h1>Ürün Ekleme</h1>

@model Product

<form asp-controller="Products" asp-action="SaveProduct" method="post" >

    <div class="mb-3">
        <label class="form-label">Ürün ismi :</label>
        <input class="form-control" asp-for="Name" />
    </div>

    <div class="mb-3">
        <label class="form-label">Ürün fiyatı :</label>
        <input class="form-control" asp-for="Price" />
    </div>

    <div class="mb-3">
        <label class="form-label">Ürün stoku :</label>
        <input class="form-control" asp-for="Stock" />
    </div>

    <div class="mb-3">
        <label class="form-label">Ürün rengi</label>
        <input class="form-control" asp-for="Color" />
    </div>

    <button class="btn btn-primary" type="submit">Kaydet</button>

</form>