@{
    ViewData["Title"] = "Index";
}

@model List<Product>

<h1>Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td><a asp-controller="product" asp-action="remove" asp-route-id="@item.Id">Sil</a></td> @*Tag Helpers*@
            </tr>
        }
    </tbody>
</table>